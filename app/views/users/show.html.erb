<%= provide(:title, 'マイページ') %>

<div class="container">
  <h1>マイページ</h1>
  <div class="row">
    <div class="col-md-3">
      <div class="text-center">
        <div><%= user_image(@user, 'w-75') %></div>
      </div>
      <%# ユーザーの評価を追加 %>
    </div>

    <div class="col-md-9">
      <table class="table table-striped table-bordered">
        <tbody>
          <tr>
            <th><%= User.human_attribute_name(:nickname) %></th>
            <td><%= @user.nickname %></td>
          </tr>
          <tr>
            <th><%= User.human_attribute_name(:family_name) %></th>
            <td><%= @user.family_name %></td>
          </tr>
          <tr>
            <th><%= User.human_attribute_name(:first_name) %></th>
            <td><%= @user.first_name %></td>
          </tr>
          <tr>
            <th><%= User.human_attribute_name(:postal_code) %></th>
            <td><%= @user.postal_code %></td>
          </tr>
          <tr>
            <th><%= User.human_attribute_name(:address) %></th>
            <td><%= @user.address %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <%= link_to('ユーザー情報編集', edit_user_path(@user), class: 'btn btn-primary mr-3') %>
  <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#modal1">退会する</button>
</div>

<div class="modal fade" id="modal1" tabindex="-1" role="dialog" aria-labelledby="label1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-body">
        <p>本当に退会しますか？</p>
        <div class="d-flex justify-content-end">
          <button type="button" class="btn btn-secondary mr-2" data-dismiss="modal">閉じる</button>
          <%= button_to('退会', @user, method: :delete , class: 'btn btn-danger') %>
        </div>
      </div>
    </div>
  </div>
</div>